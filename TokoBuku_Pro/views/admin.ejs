<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard - TokoBuku Pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4 shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#"><i class="fas fa-user-shield me-2"></i>Admin Panel</a>
            <div class="d-flex">
                <span class="navbar-text text-white me-3">Halo, Admin</span>
                <a href="/auth/logout" class="btn btn-danger btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary"><i class="fas fa-book me-2"></i>Daftar Buku</h4>
            <a href="/books/add" class="btn btn-success shadow-sm"><i class="fas fa-plus"></i> Tambah Buku</a>
        </div>

        <div class="card shadow-sm border-0 mb-5">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th class="ps-4">Cover</th>
                                <th>Judul</th>
                                <th>Penulis</th>
                                <th>Harga</th>
                                <th>Stok</th>
                                <th class="text-center">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (books.length > 0) { %>
                                <% books.forEach(book => { %>
                                <tr>
                                    <td class="ps-4 py-3">
                                        <img src="/uploads/<%= book.image %>" width="50" class="rounded border" 
                                             onerror="this.src='https://via.placeholder.com/50'">
                                    </td>
                                    <td class="fw-bold"><%= book.title %></td>
                                    <td><%= book.author %></td>
                                    <td class="text-success fw-bold">Rp <%= book.price.toLocaleString('id-ID') %></td>
                                    <td>
                                        <span class="badge <%= book.stock > 0 ? 'bg-info' : 'bg-danger' %>">
                                            <%= book.stock %>
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="/books/edit/<%= book.id %>" class="btn btn-sm btn-warning me-1"><i class="fas fa-edit"></i></a>
                                        <a href="/books/delete/<%= book.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Hapus buku ini?')"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="6" class="text-center py-4">Belum ada buku.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <h4 class="text-dark mb-3"><i class="fas fa-history me-2"></i>Riwayat Pembelian User</h4>
        
        <div class="card shadow-sm border-0 mb-5">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped align-middle mb-0">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th class="ps-4 py-3">Waktu</th>
                                <th>Nama Pembeli</th>
                                <th>Buku yang Dibeli</th>
                                <th>Total Bayar</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (transactions && transactions.length > 0) { %>
                                <% transactions.forEach(t => { %>
                                <tr>
                                    <td class="ps-4 text-muted small"><%= new Date(t.created_at).toLocaleString('id-ID') %></td>
                                    <td class="fw-bold text-primary"><%= t.username %></td>
                                    <td><%= t.title %></td>
                                    <td class="text-success fw-bold">Rp <%= t.amount.toLocaleString('id-ID') %></td>
                                    <td><span class="badge bg-success">Sukses</span></td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="5" class="text-center py-4 text-muted">Belum ada transaksi pembelian.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>