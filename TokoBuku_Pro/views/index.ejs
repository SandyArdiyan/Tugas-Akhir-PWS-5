<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TokoBuku Pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .book-card { transition: transform 0.3s; height: 100%; }
        .book-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1); }
        .cover-img { height: 250px; object-fit: cover; object-position: top; }
        .price-tag { color: #198754; font-weight: bold; font-size: 1.2rem; }
    </style>
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/"><i class="fas fa-book me-2"></i>TokoBuku Pro</a>
            
            <div class="d-flex align-items-center">
                <% if (user) { %>
                    <div class="text-white me-3">
                        <small>Hai, <%= user.username %></small><br>
                        <span class="badge bg-warning text-dark">Rp <%= Number(user.balance || 0).toLocaleString('id-ID') %></span>
                    </div>
                    <% if(user.role === 'admin') { %>
                        <a href="/admin" class="btn btn-sm btn-outline-light me-2">Admin</a>
                    <% } %>
                    <a href="/auth/logout" class="btn btn-sm btn-danger">Logout</a>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-sm btn-outline-light me-2">Masuk</a>
                    <a href="/auth/register" class="btn btn-sm btn-primary">Daftar</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="bg-primary text-white py-4 mb-4 text-center">
        <div class="container">
            <h2 class="fw-bold">Selamat Datang</h2>
            
            <% if (user && user.role === 'user') { %>
                <div class="card text-dark mx-auto p-3 shadow mt-3" style="max-width: 400px;">
                    <h6 class="fw-bold mb-2">ðŸ’° Isi Saldo</h6>
                    <form action="/topup" method="POST" class="d-flex gap-2">
                        <input type="number" name="amount" class="form-control" placeholder="Nominal (Min 1000)" required min="1000">
                        <button type="submit" class="btn btn-success fw-bold">Top Up</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>

    <div class="container mb-5">
        <h4 class="mb-3 border-bottom pb-2">Katalog Buku</h4>
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            <% if (books && books.length > 0) { %>
                <% books.forEach(book => { %>
                <div class="col">
                    <div class="card h-100 book-card border-0 shadow-sm">
                        <img src="/uploads/<%= book.image ? book.image : 'default.jpg' %>" 
                             class="card-img-top cover-img" 
                             alt="<%= book.title %>"
                             onerror="this.onerror=null;this.src='https://via.placeholder.com/300x400?text=No+Cover';">
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate"><%= book.title %></h5>
                            <p class="text-muted small mb-1"><%= book.author %></p>
                            <p class="price-tag mt-auto">Rp <%= book.price.toLocaleString('id-ID') %></p>
                            
                            <% if (user) { %>
                                <form action="/transactions/buy/<%= book.id %>" method="POST">
                                    <div class="d-grid">
                                        <% if(book.stock > 0) { %>
                                            <button type="submit" class="btn btn-success" onclick="return confirm('Beli buku ini?')">
                                                <i class="fas fa-shopping-cart"></i> Beli
                                            </button>
                                        <% } else { %>
                                            <button type="button" class="btn btn-secondary" disabled>Stok Habis</button>
                                        <% } %>
                                    </div>
                                </form>
                            <% } else { %>
                                <a href="/auth/login" class="btn btn-outline-primary w-100">Login Beli</a>
                            <% } %>
                        </div>
                        <div class="card-footer bg-white">
                            <small class="text-muted">Stok: <strong><%= book.stock %></strong></small>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center text-muted">Belum ada buku tersedia.</div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>